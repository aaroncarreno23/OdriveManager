<SlidersScreen>
    name: "sliders_screen"

    FloatLayout:

        Label:
            id:ODRIVE
            text:"ODRIVE MANAGER"
            size_hint: None, None
            font_size: 65
            bold: True
            center_x: root.width *0.5
            center_y: root.height *0.9
            color:1, 1, 1, 1
            outline_width: self.font_size *0.1
            outline_color:0, 0, 0, 1

        DPEAButton:
            id:quit
            text:"X"
            size:30, 30
            font_size:30
            bold: True
            center_x: root.width * 0.95
            center_y: root.height * 0.95
            color: 1.2, 0, 0.5, 0.8
            outline_width: self.font_size * 0.1
            outline_color: 0, 0, 0, 1
            on_press: root.quit_main()

        DPEAButton:
            id:menu
            text: "Menu"
            size: 65, 65
            font_size: 20
            bold: True
            center_x: root.width * .9
            center_y: root.height * .1
            color: 1.2, 0, .5, .8
            outline_width: self.font_size * 0.1
            outline_color: 0, 0, 0, 1
            on_press: root.to_menu()

        Slider:
            id: torque_lim_slider
            orientation: 'vertical'
            min: 1
            max: 30
            value: 20
            step: 1
            size_hint: None, None
            width: 10
            height: 250
            center_x: root.width * 0.2
            center_y: root.height * 0.5
            on_value: root.set_torque_value(self, self.value)

        Label:
            id: torque_lim_label
            text: 'Torque: 20'
            size: 100, 100
            font_size: 30
            center_x: root.width * -0.17
            center_y: root.height * -0.12


        Slider:
            id: pos_slider
            orientation: 'vertical'
            min: 1
            max: 12
            value: 0
            step: 0.5
            size_hint: None, None
            width: 10
            height: 250
            center_x: root.width * 0.85
            center_y: root.height * 0.5
            on_value: root.set_pos(self, self.value)

        Label:
            id: pos_label
            text: 'Pos: 0.0'
            size: 100, 100
            font_size: 30
            center_x: root.width * 0.38
            center_y: root.height * -0.12
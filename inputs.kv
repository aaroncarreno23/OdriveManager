<InputsScreen>
    name: "inputs_screen"

    FloatLayout:

        Label:
            id:ODRIVE
            text:"ODRIVE MANAGER"
            size_hint: None, None
            font_size: 65
            bold: True
            center_x: root.width *0.5
            center_y: root.height *0.9
            color:1, 1, 1, 1
            outline_width: self.font_size *0.1
            outline_color:0, 0, 0, 1

        DPEAButton:
            id:quit
            text:"X"
            size:30, 30
            font_size:30
            bold: True
            center_x: root.width * 0.95
            center_y: root.height * 0.95
            color: 1.2, 0, 0.5, 1
            outline_width: self.font_size * 0.1
            outline_color: 0, 0, 0, 1
            on_press: root.quit_main()

        DPEAButton:
            id:menu
            text: "Menu"
            size: 65, 65
            font_size: 20
            bold: True
            center_x: root.width * .9
            center_y: root.height * .1
            color: 1.2, 0, .5, .8
            outline_width: self.font_size * 0.05
            outline_color: 0, 0, 0, 1
            on_press: root.to_menu()
